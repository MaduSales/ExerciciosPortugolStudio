programa {
  funcao inicio() {
    //Crie um exemplo para utilizar o operador lógico
    inteiro numero 
    logico confirmacao 

    escreva("Digite um número: ")
    leia(numero)

    confirmacao = (numero < 2)

    se (numero < 2){
      escreva(confirmacao)
    }
    senao{
      escreva(confirmacao)
    }
  }
}
