programa {
  funcao inicio() {
    inteiro numero1, antecessor, sucessor

    escreva("Digite um número: ")
    leia(numero1)

    antecessor = numero1 - 1
    sucessor = numero1 + 1

    escreva("Querido usuário, você digitou "+ numero1 +" sendo que seu antecessor é "+ antecessor +", e o seu sucessor será "+ sucessor)
  }
}
